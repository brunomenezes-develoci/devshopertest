

<h1 style="color:{{section.settings.color}}">{{section.settings.heading}}</h1>

{% assign variavel = 50 %}

<p> {{variavel | times: 0.9}} </p>
<p> {{'text' | t}}</p>

{% for block in section.blocks %}
    {% case  block.type%}  
    {% when 'paragraph' %}
        <p>{{block.settings.text}}</p>
    {% when 'social' %}
        <ul>
            <li>
                <a href="{{ block.settings.url }}"> {{ block.settings.text }} </a>
            </li>
        </ul>
    {%  else %}
        {% render block %}
    {% endcase %}
{% endfor %}


{% style  %}  
    .custom-section{
        background: gray;
        padding: 60px 0;
    }
{% endstyle %}

{% schema %}
{
    "name": "Custom section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Main text",
            "default": "Default custom Section"
        },
        {
            "type": "color",
            "id": "color",
            "label": "Text color",
            "default": "#000000"
        }
    ],
    "tag":"div",
    "class": "custom-section",
    "blocks": [
        {
            "type": "@app"
        },
        {
            "name": "Social link",
            "type": "social",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text of social"
                },
                {
                    "type": "url",
                    "id": "url",
                    "label": "Url"
                }
            ]
        },
        {
            "name": "Paragraph",
            "type": "paragraph",
            "settings": [
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Texto"
                }
            ]
        }
    ],
    "max_blocks": 4,
    "locales": {
        "en": {
            "text": "Hello World!"
        },
        "es": {
            "text": "Hola Mundo!"
        }
    },
    "limit": 2,
    "presets": [
        {
            "name": "Default custom section",
            "settings": {
                "heading": "Teste",
                "color": "#000000"
            },
            "blocks": [
                {
                    "type": "paragraph",
                    "settings": {
                        "text": "Default paragraph..."
                    }
                },
                {
                    "type": "social",
                    "settings": {
                        "text": "Twitter",
                        "url": "https://x.com"
                    }
                },
                {
                    "type": "social",
                    "settings": {
                        "text": "Facebook",
                        "url": "https://facebook.com"
                    }
                }
            ]
        }
    ]
}

{% endschema %}
{% comment  %} limit -->  limite de quantos adicionar  {% endcomment %}